set $base0F #C79595

# Basic bar configuration using the Base16 variables.
bar {
    font pango: Hack 9
    status_command $HOME/dotfiles/bumblebee-status/bumblebee-status \
      -m network_traffic sensors cpu memory pasink arch-update battery time \
      -p time.format='%H:%M' \
      -t gruvbox
    position          top
    workspace_buttons yes
    colors {
        background $base00
        separator  $base01
        statusline $base04
        focused_workspace   $base05 $base0D $base00
        active_workspace    $base05 $base03 $base00
        inactive_workspace  $base03 $base01 $base05
        urgent_workspace    $base08 $base08 $base00
        binding_mode        $base00 $base0A $base00
    }
}

