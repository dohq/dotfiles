# No Wait direnv
zinit from"gh-r" as"program" sbin"direnv* -> direnv" \
    atclone'direnv hook zsh > zhook.zsh' atpull'%atclone' \
    pick"direnv" src="zhook.zsh" for \
        direnv/direnv

