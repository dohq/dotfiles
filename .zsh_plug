zinit wait lucid for \
  peterhurford/up.zsh \
  atinit"zpcompinit; zpcdreplay"  zdharma/fast-syntax-highlighting \
  blockf                          zsh-users/zsh-completions \
  atload"!_zsh_autosuggest_start" zsh-users/zsh-autosuggestions

# ls color
zinit ice atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”'
zinit light trapd00r/LS_COLORS

# git status prompt
zinit ice pick"gitstatus.plugin.zsh" src"gitstatus.prompt.zsh"
zinit light "romkatv/gitstatus"

# direnv
zinit from"gh-r" as"program" mv"direnv* -> direnv" \
    atclone'./direnv hook zsh > zhook.zsh' atpull'%atclone' \
    pick"direnv" src="zhook.zsh" for \
        direnv/direnv

# pyenv
zinit ice wait lucid atclone"./libexec/pyenv init - > zpyenv.zsh" \
    atinit'export PYENV_ROOT="$PWD"' atpull"%atclone" \
    as'command' pick'bin/pyenv' src"zpyenv.zsh" nocompile'!'
zinit light "pyenv/pyenv"

# rbenv
zinit ice wait lucid atclone"./libexec/rbenv init - > zrbenv.zsh" \
    atinit'export RBENV_ROOT="$PWD"' atpull"%atclone" \
    as'command' pick'bin/rbenv' src"zrbenv.zsh" nocompile'!'
zinit light "rbenv/rbenv"

# Binary
zinit wait"2" as"null" lucid from"gh-r" for \
  mv"fzf -> $ZPFX/bin/fzf" junegunn/fzf-bin \
  mv"peco_*/peco -> $ZPFX/bin/peco" peco/peco \
  mv"dust-*/dust -> $ZPFX/bin/dust" bootandy/dust \
  mv"ripgrep-*/rg -> $ZPFX/bin/rg" BurntSushi/ripgrep \
  mv"ghq_*/ghq -> $ZPFX/bin/ghq" x-motemen/ghq \
  mv"bosh-cli-* -> $ZPFX/bin/bosh" cloudfoundry/bosh-cli \
  mv"credhub -> $ZPFX/bin/credhub" cloudfoundry-incubator/credhub-cli \
  mv"om-* -> $ZPFX/bin/om" pivotal-cf/om \
  bpick"fly-*" mv"fly -> $ZPFX/bin/fly" concourse/concourse \

