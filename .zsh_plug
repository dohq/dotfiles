  sbin"fzf" junegunn/fzf-bin \
  sbin"**/peco" peco/peco \
  sbin"**/dust" bootandy/dust \
  sbin"**/rg" BurntSushi/ripgrep \
  sbin"**/ghq" x-motemen/ghq \
  sbin"bosh-cli-* -> bosh" cloudfoundry/bosh-cli \
  sbin"credhub" cloudfoundry-incubator/credhub-cli \
  sbin"om-* -> om" pivotal-cf/om \
  sbin"**/bat" @sharkdp/bat \
  sbin"**/fd" @sharkdp/fd \
  sbin"**/**/hub" @github/hub \
  bpick"fly-*" sbin"fly" concourse/concourse \
  bpick'kubectx*' id-as'kubectx' sbin"kubectx" ahmetb/kubectx \
  bpick'kubens*' id-as'kubens' sbin"kubens" ahmetb/kubectx \
  sbin"docker* -> docker-compose" docker/compose \
  sbin"shfmt*" @mvdan/sh \
  sbin"kapp*" k14s/kapp \
  sbin"ytt*" k14s/ytt \
  sbin"terraform-lsp" juliosueiras/terraform-lsp \
  sbin"pack" buildpacks/pack \
  sbin"direnv* -> direnv" atclone'./direnv hook zsh > zhook.zsh' atpull'%atclone' pick"direnv" src="zhook.zsh" \
    direnv/direnv

