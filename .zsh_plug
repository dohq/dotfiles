# auto suggestions
zinit ice wait"1" lucid atload"!_zsh_autosuggest_start"
  zinit load "zsh-users/zsh-autosuggestions"

# syntax highlighting
zinit ice wait lucid atinit"ZPLGM[COMPINIT_OPTS]=-C; zpcompinit; zpcdreplay"
  zinit light "zsh-users/zsh-syntax-highlighting"

# up command
zinit ice wait lucid
  zinit light "peterhurford/up.zsh"

# completion
zinit ice wait lucid blockf
  zinit light "zsh-users/zsh-completions"

# abbrev
# zinit ice wait lucid blockf
zinit ice wait'!0' lucid blockf
  zinit light "momo-lab/zsh-abbrev-alias"

# git status prompt
zinit ice pick"gitstatus.plugin.zsh" src"gitstatus.prompt.zsh"
  zinit light "romkatv/gitstatus"

# sharkdp/fd
zinit ice as"command" from"gh-r" mv"fd* -> fd" pick"fd/fd"
  zinit light "sharkdp/fd"

# ls color
zinit ice wait lucid atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”'
zinit light "trapd00r/LS_COLORS"

# direnv
zinit ice from"gh-r" as"program" mv"direnv* -> direnv" \
    atclone'./direnv hook zsh > zhook.zsh' atpull'%atclone' pick"direnv" src"zhook.zsh"
zinit light "direnv/direnv"

# pyenv
zinit ice wait lucid atclone"./libexec/pyenv init - > zpyenv.zsh" \
    atinit'export PYENV_ROOT="$PWD"' atpull"%atclone" \
    as'command' pick'bin/pyenv' src"zpyenv.zsh" nocompile'!'
zinit light "pyenv/pyenv"

# rbenv
zinit ice wait lucid atclone"./libexec/rbenv init - > zrbenv.zsh" \
    atinit'export RBENV_ROOT="$PWD"' atpull"%atclone" \
    as'command' pick'bin/rbenv' src"zrbenv.zsh" nocompile'!'
zinit light "rbenv/rbenv"

