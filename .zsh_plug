# auto suggestions
zplugin ice wait"1" lucid atload"!_zsh_autosuggest_start"
  zplugin load "zsh-users/zsh-autosuggestions"

# syntax highlighting
zplugin ice wait lucid atinit"ZPLGM[COMPINIT_OPTS]=-C; zpcompinit; zpcdreplay"
  zplugin light "zsh-users/zsh-syntax-highlighting"

# up command
zplugin ice wait lucid
  zplugin light "peterhurford/up.zsh"

# completion
zplugin ice wait lucid blockf
  zplugin light "zsh-users/zsh-completions"

# abbrev
# zplugin ice wait lucid blockf
zplugin ice wait'!0' lucid blockf
  zplugin light "momo-lab/zsh-abbrev-alias"

# git status prompt
zplugin ice pick"gitstatus.plugin.zsh" src"gitstatus.prompt.zsh"
  zplugin light "romkatv/gitstatus"

# sharkdp/fd
zplugin ice as"command" from"gh-r" mv"fd* -> fd" pick"fd/fd"
  zplugin light "sharkdp/fd"

# ls color
zplugin ice wait lucid atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atpull'%atclone' pick"clrs.zsh" nocompile'!' \
    atload'zstyle ":completion:*" list-colors “${(s.:.)LS_COLORS}”'
zplugin light "trapd00r/LS_COLORS"

# direnv
zplugin ice from"gh-r" as"program" mv"direnv* -> direnv" \
    atclone'./direnv hook zsh > zhook.zsh' atpull'%atclone' pick"direnv" src"zhook.zsh"
zplugin light "direnv/direnv"

# pyenv
zplugin ice wait lucid atclone"./libexec/pyenv init - > zpyenv.zsh" \
    atinit'export PYENV_ROOT="$PWD"' atpull"%atclone" \
    as'command' pick'bin/pyenv' src"zpyenv.zsh" nocompile'!'
zplugin light "pyenv/pyenv"

# rbenv
zplugin ice wait lucid atclone"./libexec/rbenv init - > zrbenv.zsh" \
    atinit'export RBENV_ROOT="$PWD"' atpull"%atclone" \
    as'command' pick'bin/rbenv' src"zrbenv.zsh" nocompile'!'
zplugin light "rbenv/rbenv"

