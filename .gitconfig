# vim: ft=gitconfig
[core]
	editor = vim
	quotepath = false
	symlinks = true
	autocrlf = false
	ignorecase = false
	safecrlf = true
	whitespace = cr-at-eol
[color]
	ui = auto
[rebase]
	autosquash = true
	autostash = true
[push]
	default = current
	followTags = true
[pull]
	ff = only
[merge]
	ff = false
[credential]
	helper = manager
[diff]
	altorithm = histogram
	compactionHeuristic = true
	tool = vimdiff
[commit]
	verbose = true
	gpgsign = true
[rerere]
	enabled = true
[http]
	postBuffer = 524288000
[alias]
	co = checkout
[grep]
	lineNumber = true
	patternType = extended
[help]
	autocorrect = 1
[ghq]
	root = ~/go/src
[url "git@github.com:dohq"]
	pushInsteadOf = https://github.com/dohq
[url "git@github.com:bosh-elastic-stack"]
	pushInsteadOf = https://github.com/bosh-elastic-stack
[hub]
	protocol = ssh
[gpg]
	program = gpg
[user]
	signingkey = 3441E0B8A6850D2AA086231D37D38BFE80A21F42
[include]
	path = $HOME/.gitconfig_local
