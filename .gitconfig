[core]
	editor = vim
	quotepath = false
	symlinks = true
	autocrlf = false
	ignorecase = false
	safecrlf = true
[color]
	ui = auto
[rebase]
	autosquash = true
	autostash = true
[push]
	default = current
	followTags = true
[ghq]
	root = ~/go/src
[pull]
	ff = only
[merge]
	ff = false
[credential]
	helper = cache
[diff]
	altorithm = histogram
	compactionHeuristic = true
[commit]
	verbose = true
[rerere]
	enabled = true

# vim: ft=gitconfig
