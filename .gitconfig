[user]
    name = dohq
    email = dorastone@gmail.com
[core]
    editor = vim
    quotepath = off
    symlinks = false
    autocrlf = input
[color]
    ui = auto
    diff = always
    status = always
    branch = always
    interactive = always
[pack]
    packSizeLimit = 2g
[help]
    format = html
[diff "astextplain"]
    textconv = astextplain
[rebase]
    autosquash = true

[pretty]
	medium-reverse = format:%C(red reverse)%d%Creset%C(white reverse) %h% Creset %C(green reverse) %an %Creset %C(cyan)%ar%Creset%n%C(white bold)%w(80)%s%Creset%n%n%w(80,2,2)%b
