# vim: ft=gitconfig
[core]
	editor = vim
	quotepath = false
	symlinks = true
	autocrlf = false
	ignorecase = false
	safecrlf = true
	whitespace = cr-at-eol
[color]
	ui = auto
[rebase]
	autosquash = true
	autostash = true
[push]
	default = current
	followTags = true
[ghq]
	root = ~/go/src
[pull]
	ff = only
[merge]
	ff = false
[credential]
	helper = cache
[diff]
	altorithm = histogram
	compactionHeuristic = true
	tool = vimdiff
[commit]
	verbose = true
[rerere]
	enabled = true
[http]
	postBuffer = 524288000
[alias]
  co = checkout
